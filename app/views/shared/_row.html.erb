<tr>
  <td><input class="row-<%= row %> <%= type %>" value="<%= activity.product_backlog_id %>"/></td>
  <td><input class="row-<%= row %> <%= type %>" value="<%= activity.id %>"/></td>
  <td><input class="row-<%= row %> <%= type %>" title="<%= activity.subject %>"
    value="<%= activity.subject %>"/></td>
  <td><%= select_tag :activity_assignee, options_for_select(@assignees.collect {|assignee|
    [assignee.user_name, assignee.user_id]}), {include_blank: true,
    class: "row-#{row} #{type} assignee"} %></td>
  <td class="panel-left">
    <input type="number" class="remaining row-<%= row %> <%= type %>"
      value="<%= activity.get_remaining_activity %>"readonly/>
  </td>
  <td class="panel-left">
    <input type="number" min=0 class="estimate row-<%= row %> <%= type %>" value="<%= activity.estimate %>"/>
  </td>
  <%= f.fields_for :log_works, activity.log_works do |log_work_builder| %>
    <td class="panel-left">
      <%= log_work_builder.hidden_field :activity_id %>
      <%= log_work_builder.hidden_field :day %>
      <%= log_work_builder.text_field :remaining_time, type: :number,
        class: "log log-#{log_work_builder.object.day} row-#{row} #{type}" %>
    </td>
  <% end %>
</tr>
