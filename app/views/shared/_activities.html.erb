<table id="activities" class="table table-bordered" >
  <tbody>
    <%= render "header" %>
    <%= form_for [:admin, @project, @sprint] do |f| %>
      <% @activities.each_with_index do |activity, row| %>
        <%= render "row", activity: activity, row: row, type: activity_class(activity), f: f %>
      <% end %>
      <div class="col-md-12">
        <%= f.submit t("buttons.save"), class: "btn btn-success" %>
      </div>
    <% end %>
  </tbody>
</table>
<div class="col-md-12">
  <%= link_to content_tag(:span, "", class: "glyphicon glyphicon-plus"),
    "javascript:void(0)", class: "btn btn-primary", id: "load_more", type: "button" %>
</div>

<%= render "more_rows" %>
