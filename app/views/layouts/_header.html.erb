<header class="navbar navbar-fixed-top navbar-custom">
  <%= link_to t("project_name"), root_path, id: "logo"  %>
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% unless current_user.member? %>
            <li><%= link_to t("layouts.invite"), users_path %></li>
            <li><%= link_to t("layouts.sync_user"), synchronizes_path %></li>
            <li><%= link_to t("layouts.projects"), admin_projects_path %></li>
            <li><%= link_to t("layouts.phases"), admin_phases_path %></li>
          <% else %>
            <li><%= link_to t("layouts.projects"), projects_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("sessions.profile"),
                user_path(current_user) %></li>
              <li><%= link_to t("sessions.logout"), destroy_user_session_path,
                method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("sessions.login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
