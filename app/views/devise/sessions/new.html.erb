<% provide :title, t("sessions.login") %>
<h2 class="text-center"><%= t "sessions.login" %></h2>
<%= form_for(resource, as: resource_name,
  url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: "form-control", autofocus: true %><br/>

      <%= f.label :password %>
      <%= link_to t("sessions.forgot"), new_user_password_path %><br/>
      <%= f.password_field :password, class: "form-control",
        autocomplete: "off" %><br/>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <%= f.submit t("buttons.login"), class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
