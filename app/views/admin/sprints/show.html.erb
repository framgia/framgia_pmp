<%= render "shared/category_tab", project: @project, active_tab: @sprint.id %>
<div id="sprints">
  <div class="button pull-right">
    <div class="dropdown pull-right">
      <button id="dLabel" type="button" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false"
        class="btn btn-default">
        <span class="glyphicon glyphicon-align-justify"
          aria-hidden="true"></span>
      </button>
      <ul class="dropdown-menu dropdown-menu-right"
        aria-labelledby="dLabel">
        <li>
          <%= link_to t("buttons.edit"), edit_admin_project_sprint_path(@project, @sprint) %>
        </li>
        <li>
          <%= link_to t("buttons.delete"), admin_project_sprint_path(@project, @sprint),
            method: :delete, data: {confirm: t("projects.delete.confirm")} %>
        </li>
        <li>
          <%= link_to t("work_performances.view"),
            admin_project_sprint_work_performances_path(@project, @sprint) %>
        </li>
        <li>
          <%= link_to t("phases.new"), new_admin_project_sprint_phase_path(@project, @sprint) %>
        </li>
      </ul>
    </div>
  </div>
  <div class="row">
    <%= render "lost_hour", sprint: @sprint, project: @project,
      assignees: @sprint.assignees %>
  </div>
  <div><%= render "activities" %></div>
</div>
